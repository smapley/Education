<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="syl_style" parent="syl_oneitem_style">
        <item name="android:onClick">itemOnClick</item>
    </style>

    <style name="syl_item_style">
        <item name="android:background">@drawable/textview_edge</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="syl_oneitem_style">
        <item name="android:background">@drawable/textview_edge</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">70dp</item>
    </style>
    
    <style name="set_item0">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="student_dialog">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="about_item">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="about_items">
        <item name="android:layout_gravity">right</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray</item>

    </style>
    
</resources>
