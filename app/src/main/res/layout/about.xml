            android:background="@color/gray" />

        <TableRow>

            <TextView
                style="@style/about_item"
                android:text="@string/about_item4" />

            <TextView
                style="@style/about_items"
                android:text="@string/about_item4s" />
        </TableRow>

        <TextView
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="@color/gray" />

        <TableRow>

            <TextView
                style="@style/about_item"
                android:text="@string/about_item5" />

            <TextView
                style="@style/about_items"
                android:text="@string/about_item5s" />
        </TableRow>

        <TextView
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="@color/gray" />
    </TableLayout>


</RelativeLayout>
