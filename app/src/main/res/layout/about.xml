        </TableRow>

        <TextView
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="@color/gray" />

        <TableRow>

            <TextView
                style="@style/about_item"
                android:text="@string/about_item2" />

            <TextView
