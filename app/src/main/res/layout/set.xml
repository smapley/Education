<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/set_lin1"
        layout="@layout/layout_title" />

    <TableLayout
        android:layout_below="@+id/set_lin1"
        android:layout_width="match_parent"
        android:stretchColumns="0"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">

        <TableRow android:id="@+id/set_item1">

            <TextView
                android:id="@+id/set_item1_text"
                style="@style/set_item0"
                android:text="@string/set_item11" />

            <ImageView android:src="@drawable/jiantous" />
        </TableRow>

        <TextView
            android:id="@+id/set_bar1"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <TableRow android:id="@+id/set_item2">

            <TextView
                android:id="@+id/set_item2_text"
                style="@style/set_item0"
                android:text="@string/set_item11" />

            <ImageView android:src="@drawable/jiantous" />
        </TableRow>

        <TextView
            android:id="@+id/set_bar2"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <TableRow android:id="@+id/set_item3">

            <TextView
                style="@style/set_item0"
                android:id="@+id/set_item3_text"

                android:text="@string/set_item11" />

            <ImageView android:src="@drawable/jiantous" />
        </TableRow>

        <TextView
            android:id="@+id/set_bar3"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <TableRow android:id="@+id/set_item4">

            <TextView
                android:id="@+id/set_item4_text"

                style="@style/set_item0"
                android:text="@string/set_item11" />

            <ImageView android:src="@drawable/jiantous" />
        </TableRow>

        <TextView
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <TableRow
            android:id="@+id/set_logout"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/set_logout_text"
                style="@style/set_item0"
                android:text="@string/set_logout" />

            <ImageView android:src="@drawable/jiantous" />
        </TableRow>

        <TextView
            android:layout_height="0.5dp"
            android:background="@color/gray" />

    </TableLayout>
</RelativeLayout>
